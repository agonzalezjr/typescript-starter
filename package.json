{
  "name": "type-script-primer",
  "version": "1.0.0",
  "description": "minimal typescript boilerplate to use with VSCode",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "tsc && node dist/src/index.js",
    "build": "tsc",
    "test": "tsc && mocha dist/test/**/*.js",
    "test-report": "tsc && mocha dist/test/**/*.js --reporter mochawesome --reporter-options reportDir=test-report",
    "test-meow": "tsc && mocha dist/test/**/*.js --reporter nyan",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "author": "Andy Gonzalez",
  "license": "ISC",
  "dependencies": {
    "chalk": "^2.4.2",
    "typescript": "^3.7.2",
    "performance-now": "^2.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.6",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.5",
    "karma": "^4.4.1",
    "karma-nyan-reporter": "^0.2.5",
    "lint-staged": "^10.2.10",
    "mocha": "^6.2.2",
    "mochawesome": "^4.1.0",
    "prettier": "^1.18.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agonzalezjr/typescript-starter.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint src/**/*.ts --fix",
      "git add"
    ]
  }
}
